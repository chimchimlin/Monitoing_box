{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/@types/**/*.types.ts",
    "src/**/*.vue",
    "src/**/*/*.vue",
    "src/stores/*",
    "src/stores/*.ts",
    "src/components/fire/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}